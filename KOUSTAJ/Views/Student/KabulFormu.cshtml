@if (Session["kmail"] == null)
{
    <script>
        window.alert("Sayfayı görüntüleyebilmeniz için giriş yapmanız gerekmektedir.");
        window.location.href = 'https://localhost:44396/Student/Login';
    </script>

}
else
{
    <body>

        @using (Html.BeginForm("KabulFormu", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="wrapper">
                <div class="container">
                    <h1>Staj/İş Yeri Kabul Formunu Yükleyiniz</h1>
                    <div class="upload-container">
                        <div class="border-container">
                            <div class="icons fa-4x">
                                <i class="fas fa-file-image" data-fa-transform="shrink-3 down-2 left-6 rotate--45"></i>
                                <i class="fas fa-file-alt" data-fa-transform="shrink-2 up-4"></i>
                                <i class="fas fa-file-pdf" data-fa-transform="shrink-3 down-2 right-6 rotate-45"></i>
                            </div>
                            <p>
                                <h4 style="font-style:italic;">Yalnızca pdf dosyaları kabul edilmektedir...</h4><br />
                                <input type="file" name="ozgecmis" accept="application/pdf" /><br /> <br /> <di style="padding-left:20px;">
                                    <input type="submit" value="Kaydet" class="btn btn-outline-secondary btn-xl" />
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
